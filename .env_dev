# ========================
# DOMAIN CONFIGURATION
# ========================
# The domain where SayTruth is accessible
# Change this to use a different domain (local development, staging, production)
DOMAIN=localhost
EMAIL=python.hassan@gmail.com

# ========================
# BACKEND API CONFIGURATION
# ========================
API_PORT=8000
API_HOST=0.0.0.0

# ========================
# FRONTEND CONFIGURATION
# ========================
FRONTEND_PORT=3000
NODE_ENV=development
VITE_API_BASE_URL=http://localhost

# ========================
# JWT & AUTHENTICATION
# ========================
# JWT secret key for token signing (MUST be changed in production)
# Min 32 characters recommended
# Generate new: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=Z6BkzaWcF7r5cC-VMAumjpBpudSyjGskQ0ObquGJhG0=


# Access token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========================
# MESSAGE ENCRYPTION
# ========================
# Fernet encryption key for message encryption at rest
# MUST be set before first run, losing this = messages unrecoverable
# Generate new: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=Vv3oE5-p_z1rM3DqK_u_M-7yY_X8z3R_L_k9wB-nS8E=

# ========================
# DATABASE CONFIGURATION
# ========================
# SQLite (development/single-server)
DATABASE_URL=sqlite:////data/app.db
DB_PATH=/data/app.db

# PostgreSQL (production-ready, uncomment when needed)
# DATABASE_URL=postgresql+psycopg2://user:password@postgres:5432/saytruth

# ========================
# SECURITY & RATE LIMITING
# ========================
# Rate limit for general API endpoints (per minute)
RATE_LIMIT=60/minute

# Rate limit for auth endpoints (per hour)
AUTH_RATE_LIMIT=20/hour

# Rate limit for link creation (per hour)
LINK_CREATION_RATE_LIMIT=20/hour

# Rate limit for message sending (per minute)
MESSAGE_SEND_RATE_LIMIT=10/minute

# ========================
# CORS CONFIGURATION
# ========================
# Frontend URL for CORS (must match domain or localhost for development)
FRONTEND_URL=http://localhost

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://saytruth.duckdns.org,http://localhost:3000,http://localhost:5173,http://localhost

# ========================
# LOGGING
# ========================
LOG_LEVEL=INFO

# ========================
# CADDY REVERSE PROXY
# ========================
# Email for HTTPS certificate registration
CADDY_EMAIL=python.hassan@gmail.com

# Auto HTTPS (true for production, false for development with HTTP only)
AUTO_HTTPS=off

# ========================
# NGINX REVERSE PROXY
# ========================
# Nginx is the internal load balancer between frontend and backend

# ========================
# DEVELOPMENT/DEBUG
# ========================
# Set to true to enable debug mode (NEVER in production)
DEBUG=true

# Set to true to enable CORS debug logging
CORS_DEBUG=false

